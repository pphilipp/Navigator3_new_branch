<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="0dp"
    tools:context=".OrderDetails" >

   <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="24dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txt_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="TextView"
                android:textSize="25sp" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_arrived"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="На месте"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_map"
        android:layout_width="110dp"
        android:layout_height="60dp"
        android:layout_alignBaseline="@+id/btn_back"
        android:layout_alignBottom="@+id/btn_back"
        android:layout_toLeftOf="@+id/btn_back"
        android:enabled="false"
        android:text="Карта"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_details"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_alignBaseline="@+id/btn_map"
        android:layout_alignBottom="@+id/btn_map"
        android:layout_toLeftOf="@+id/btn_map"
        android:enabled="false"
        android:text="Детали"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_back"
        android:layout_width="110dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/btn_do"
        android:layout_alignParentRight="true"
        android:text="Назад"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_do"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/btn_arrived"
        android:layout_toRightOf="@+id/btn_arrived"
        android:text="Выполняю"
        android:textSize="20sp" />
    
    <Button
        android:id="@+id/btn_cancel_ord"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_above="@+id/btn_do"
        android:layout_alignLeft="@+id/btn_do"
        android:layout_alignRight="@+id/btn_do"
        android:text="Отменить"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_connectDriverClient"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_alignBaseline="@+id/btn_cancel_ord"
        android:layout_alignBottom="@+id/btn_cancel_ord"
        android:layout_alignParentRight="true"
        android:background="@drawable/tel_2"
        android:textSize="20sp" />

<Button
    android:id="@+id/btn_accept_order"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignBottom="@+id/btn_cancel_ord"
    android:layout_alignLeft="@+id/btn_arrived"
    android:layout_alignTop="@+id/btn_cancel_ord"
    android:layout_toLeftOf="@+id/btn_cancel_ord"
    android:text="Принять" />

</RelativeLayout>
