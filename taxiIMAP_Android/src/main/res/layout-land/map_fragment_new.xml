<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_toLeftOf="@+id/buttonLL"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/button_back_blue" android:layout_gravity="right"
                android:gravity="top" android:layout_alignParentRight="true" android:id="@+id/buttonLL">
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Показать меня"
                    android:id="@+id/btn_show_me" android:background="@android:color/transparent"
                    android:textColor="@android:color/white" android:textStyle="bold"
                    android:drawableTop="@drawable/showme" android:padding="10dp"
                    android:layout_weight=".3" android:textSize="15sp"/>
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/img_do_my_order" android:background="@drawable/separator2" android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"/>
            <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/btn_zoom_in" android:layout_weight=".3"
                    android:background="@android:color/transparent" android:src="@drawable/zoom_in" android:padding="10dp"/>
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView2" android:background="@drawable/separator2" android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"/>
            <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/btn_zoom_out" android:layout_weight=".3"
                    android:background="@android:color/transparent" android:src="@drawable/zoom_out" android:padding="10dp"/>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>