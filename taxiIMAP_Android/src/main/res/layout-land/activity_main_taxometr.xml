<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_taxometr_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_taxometr_background"
    android:orientation="vertical"
    tools:context=".Main_taxometr" >

    <Button
        android:id="@+id/button_tarrif"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/blue_line"
        android:text="ТАРИФ &quot;Тестовый&quot;"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/button_tarrif"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TableLayout
                android:id="@+id/tableLayout_prices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button_tarrif"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="20dp" >

                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textView_name_enter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Посадка"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/textView_price_enter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp" android:layout_marginLeft="15dp" android:layout_marginRight="15dp"/>

                    <TextView
                        android:id="@+id/textView_razm_enter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" грн"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textView_name_kilometr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Километр"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/textView_price_kilometr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp" android:layout_marginLeft="15dp" android:layout_marginRight="15dp"/>

                    <TextView
                        android:id="@+id/textView_razm_kilometr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" грн/км"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textView_name_wait"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ожидание"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/textView_price_wait"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp" android:layout_marginRight="15dp" android:layout_marginLeft="15dp"/>

                    <TextView
                        android:id="@+id/textView_razm_wait"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" грн/мин"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textView_name_downtime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Затор"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/textView_price_downtime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp" android:layout_marginLeft="15dp"/>

                    <TextView
                        android:id="@+id/textView_razm_downtime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" грн/мин"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp" />
                </TableRow>
            </TableLayout>

            <ImageView
                android:id="@+id/ImageView01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:scaleType="fitXY"
                android:src="@drawable/gray_line" />

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/imageView2"
                android:background="@drawable/price_background_taxometr"
                android:orientation="vertical" android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Общая стоимость:"
                    android:textColor="#f59f18"
                    android:textSize="20sp" android:layout_marginLeft="10dp"/>

                <LinearLayout
                    android:id="@+id/linearLayout_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" >

                    <TextView
                        android:id="@+id/textView_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="9683"
                        android:textColor="#f59f18"
                        android:textSize="60sp" />

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="."
                        android:textColor="#f59f18"
                        android:textSize="60sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="грн."
                            android:textColor="#f59f18"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/textview_price_after_dot"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:text="15"
                            android:textColor="#f59f18"
                            android:textSize="35sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imageView_face"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_launcher" />

                <TextView
                    android:id="@+id/textView_surname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Фамилия"
                    android:textColor="#f59f18"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textView_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Имя"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textView_patronymic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Отчество"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/button_cancel_taxometr"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/button_blue"
                    android:text="ОТМЕНА"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >
                    <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/img_do_my_order" android:background="@drawable/main_textview_boards1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="время в пути" android:layout_centerHorizontal="true"
                        android:layout_alignParentTop="true"/>
                    <TextView
                        android:id="@+id/textView_time_in_road"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="TextView"
                        android:textSize="25sp" android:layout_centerInParent="true"
                        android:layout_alignParentBottom="false" android:paddingTop="10dp"/>
                </RelativeLayout>

                <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                                android:id="@+id/relativeLayout" android:layout_marginTop="1dp">
                    <ImageView android:layout_width="match_parent" android:layout_height="wrap_content"
                               android:id="@+id/imageView2" android:background="@drawable/main_textview_boards1"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:layout_gravity="center_horizontal" android:text="расстояние"
                              android:layout_centerHorizontal="true" android:layout_alignParentTop="true"/>
                    <TextView android:id="@+id/textView_distance" android:layout_width="wrap_content"
                              android:layout_height="wrap_content" android:layout_gravity="center"
                              android:text="TextView" android:textSize="25sp" android:layout_centerInParent="true"
                              android:layout_alignParentBottom="false" android:paddingTop="10dp"/>
                </RelativeLayout>
                <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                                android:id="@+id/relativeLayout2" android:layout_marginTop="1dp">
                    <ImageView android:layout_width="match_parent" android:layout_height="wrap_content"
                               android:id="@+id/imageView3" android:background="@drawable/main_textview_boards1"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:layout_gravity="center_horizontal" android:text="скорость"
                              android:layout_centerHorizontal="true" android:layout_alignParentTop="true"/>
                    <TextView android:id="@+id/textView_speed" android:layout_width="wrap_content"
                              android:layout_height="wrap_content" android:layout_gravity="center"
                              android:text="TextView" android:textSize="25sp" android:layout_centerInParent="true"
                              android:layout_alignParentBottom="false" android:paddingTop="10dp"/>
                </RelativeLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <Button
                        android:id="@+id/button_start_taxometr"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="bottom"
                        android:background="@drawable/button_black"
                        android:text="СТАРТ"
                        android:textSize="28sp" />
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/arrow" />

</RelativeLayout>