<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:background="@android:color/transparent"
        >

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/parkingName" android:background="@drawable/dark_back"
            android:textColor="@color/orangeEditText" android:textStyle="bold"
            android:layout_marginTop="5dp" android:textSize="20sp" android:paddingLeft="10dp"
            android:gravity="center_vertical" android:layout_marginBottom="5dp"/>
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:id="@+id/driversOnParking" android:background="@drawable/dark_back"
              android:textColor="@android:color/white"
              android:textSize="15sp" android:paddingLeft="10dp"
              android:gravity="center_vertical" android:layout_marginBottom="5dp"/>
</LinearLayout>