<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_taxometr_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_taxometr_background"
    tools:context=".Main_taxometr" >

    <Button
        android:id="@+id/button_tarrif"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/blue_line"
        android:text="ТАРИФ &quot;Тестовый&quot;"
        android:textSize="20sp" />

    <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/scrollView" android:layout_below="@+id/button_tarrif" android:fillViewport="true"
            android:layout_above="@+id/linearLayout_buttons">
        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            <TableLayout
                android:id="@+id/tableLayout_prices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1" >

                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textView_name_enter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Посадка"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/textView_price_enter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp" android:layout_marginLeft="15dp" android:layout_marginRight="15dp"/>

                    <TextView
                        android:id="@+id/textView_razm_enter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" грн"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textView_name_kilometr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Километр"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/textView_price_kilometr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp" android:layout_marginLeft="15dp" android:layout_marginRight="15dp"/>

                    <TextView
                        android:id="@+id/textView_razm_kilometr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" грн/км"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textView_name_wait"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ожидание"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/textView_price_wait"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp" android:layout_marginLeft="15dp" android:layout_marginRight="15dp"/>

                    <TextView
                        android:id="@+id/textView_razm_wait"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" грн/мин"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textView_name_downtime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Затор"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/textView_price_downtime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp" android:layout_marginLeft="15dp" android:layout_marginRight="15dp"/>

                    <TextView
                        android:id="@+id/textView_razm_downtime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" грн/мин"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp" />
                </TableRow>
            </TableLayout>
            <LinearLayout
                android:id="@+id/linearLayout_info"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/ImageView01" >

                <ImageView
                    android:id="@+id/imageView_face"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/ic_launcher" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:lines="2"
                        android:minLines="2"
                        android:text="Вас\nобслуживает:"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/textView_surname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="1dp"
                        android:text="Фамилия"
                        android:textColor="#f59f18"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/textView_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:text="Имя"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/textView_patronymic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Отчество"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="116dp"
                        android:layout_height="36dp"
                        android:layout_gravity="center"
                        android:background="@drawable/main_textview_boards"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/textView_time_in_road"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="8dp"
                            android:text="TextView"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="116dp"
                        android:layout_height="36dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/main_textview_boards"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/textView_distance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="8dp"
                            android:text="TextView"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="116dp"
                        android:layout_height="36dp"
                        android:layout_gravity="center"
                        android:background="@drawable/main_textview_boards"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/textView_speed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="8dp"
                            android:text="TextView"
                            android:textSize="20sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/imageView2"
                android:background="@drawable/price_background_taxometr"
                android:gravity="center"
                android:orientation="vertical" android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="Общая стоимость:"
                    android:textColor="#f59f18"
                    android:textSize="15sp" />

                <LinearLayout
                    android:id="@+id/linearLayout_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textView_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="9683"
                        android:textColor="#f59f18"
                        android:textSize="60sp" />

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="."
                        android:textColor="#f59f18"
                        android:textSize="60sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="грн."
                            android:textColor="#f59f18"
                            android:textSize="22sp" />

                        <TextView
                            android:id="@+id/textview_price_after_dot"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:text="15"
                            android:textColor="#f59f18"
                            android:textSize="30sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:id="@+id/ImageView01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/linearLayout1"
                android:scaleType="fitXY"
                android:src="@drawable/gray_line" />
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/tableLayout_prices"
                android:scaleType="fitXY"
                android:src="@drawable/gray_line" />
        </RelativeLayout>
    </ScrollView>
    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/arrow" />
    <LinearLayout
        android:id="@+id/linearLayout_buttons"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true" >

        <Button
            android:id="@+id/button_cancel_taxometr"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_blue"
            android:text="ОТМЕНА"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button_start_taxometr"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_black"
            android:text="СТАРТ"
            android:textSize="18sp" />
    </LinearLayout>

</RelativeLayout>