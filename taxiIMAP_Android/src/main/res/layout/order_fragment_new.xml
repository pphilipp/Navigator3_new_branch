<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="70dp" android:background="@drawable/button_back" android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp">
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="5"
                    android:id="@+id/btn_5" android:background="@drawable/light_gradient_button"
                    android:textColor="@android:color/white" android:layout_weight=".2" android:textSize="40sp"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/img_do_my_order" android:background="@drawable/separator"
                    android:layout_marginTop="5dp" android:layout_marginBottom="5dp"/>
            <Button android:layout_width="wrap_content" android:layout_height="match_parent" android:text="10"
                    android:id="@+id/btn_10" android:background="@drawable/light_gradient_button"
                    android:textColor="@android:color/white" android:layout_weight=".2" android:textSize="40sp"/>
            <ImageView android:layout_width="wrap_content" android:layout_height="match_parent" android:id="@+id/imageView2"
                       android:background="@drawable/separator" android:layout_marginTop="5dp"
                       android:layout_marginBottom="5dp"/>
            <Button android:layout_width="wrap_content" android:layout_height="match_parent" android:text="15"
                    android:id="@+id/btn_15" android:background="@drawable/light_gradient_button"
                    android:textColor="@android:color/white" android:layout_weight=".2" android:textSize="40sp"/>
            <ImageView android:layout_width="wrap_content" android:layout_height="match_parent" android:id="@+id/imageView3"
                       android:background="@drawable/separator" android:layout_marginTop="5dp"
                       android:layout_marginBottom="5dp"/>
            <Button android:layout_width="wrap_content" android:layout_height="match_parent" android:text="20"
                    android:id="@+id/btn_20" android:background="@drawable/light_gradient_button"
                    android:textColor="@android:color/white" android:layout_weight=".2" android:textSize="40sp"/>
            <ImageView android:layout_width="wrap_content" android:layout_height="match_parent" android:id="@+id/imageView4"
                       android:background="@drawable/separator" android:layout_marginTop="5dp"
                       android:layout_marginBottom="5dp"/>
            <Button android:layout_width="wrap_content" android:layout_height="match_parent" android:text="25"
                    android:id="@+id/btn_25" android:background="@drawable/light_gradient_button"
                    android:textColor="@android:color/white" android:layout_weight=".2" android:textSize="40sp"/>
        </LinearLayout>
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imageView5" android:background="@drawable/top_separator"/>
    </LinearLayout>
    <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView" android:layout_weight="0.3"
            >
        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:padding="15dp">
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent"
                          android:layout_height="wrap_content" android:id="@+id/linearLayout">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:textAppearance="?android:attr/textAppearanceLarge" android:text="Large Text"
                          android:id="@+id/time" android:background="@drawable/dark_back"
                          android:textColor="@color/orangeEditText" android:textStyle="bold" android:paddingLeft="10dp"
                          android:paddingRight="10dp" android:paddingTop="5dp" android:paddingBottom="5dp"
                          android:layout_weight=".5" android:gravity="center_vertical|center_horizontal"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:textAppearance="?android:attr/textAppearanceLarge" android:text="Large Text"
                          android:id="@+id/date" android:background="@drawable/dark_back"
                          android:textColor="@color/orangeEditText" android:textStyle="bold" android:paddingLeft="10dp"
                          android:paddingRight="10dp" android:paddingTop="5dp" android:paddingBottom="5dp"
                          android:layout_toRightOf="@+id/time" android:layout_marginLeft="15dp"
                          android:layout_weight=".5" android:gravity="center_vertical|center_horizontal"/>
            </LinearLayout>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceMedium" android:text="Адрес подачи:"
                      android:id="@+id/textView3" android:textColor="@android:color/white" android:textStyle="bold"
                      android:layout_below="@+id/linearLayout" android:layout_marginTop="10dp"/>
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceLarge" android:text="Large Text"
                      android:id="@+id/addressFrom" android:textColor="@color/orangeEditText"
                      android:layout_below="@+id/textView3" android:layout_marginTop="10dp"
                      android:background="@drawable/dark_back" android:padding="10dp"/>
        </RelativeLayout>
    </ScrollView>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:visibility="gone">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/img_source"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/txt_details"/>
        <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="New Button"
                android:id="@+id/btn_30"/>
    </LinearLayout>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageView6" android:background="@drawable/divider"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:background="@drawable/dark_back2"
            android:paddingLeft="15dp" android:paddingRight="15dp">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" android:gravity="center_horizontal" android:paddingBottom="5dp">
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Отказать"
                    android:id="@+id/btn_cancel" android:textColor="@android:color/white"
                    android:background="@android:color/transparent" android:layout_weight=".5"
                    android:textSize="@dimen/transparent_button_text_size"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/imageView7" android:background="@drawable/separator3"
                    android:layout_marginLeft="15dp" android:layout_marginRight="15dp"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Принять"
                    android:id="@+id/btn_accept" android:textColor="@android:color/white"
                    android:background="@android:color/transparent" android:layout_weight=".5"
                    android:textSize="@dimen/transparent_button_text_size"/>
        </LinearLayout>
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imageView8" android:background="@drawable/separator2"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Детали"
                android:id="@+id/btn_details" android:textColor="@android:color/white"
                android:background="@drawable/button_back" android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp" android:paddingLeft="30dp" android:paddingRight="30dp"
                android:textSize="@dimen/transparent_button_text_size"/>
    </LinearLayout>
</LinearLayout>