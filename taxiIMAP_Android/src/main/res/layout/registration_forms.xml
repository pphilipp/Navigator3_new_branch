<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#0085d5"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:text="ПОЗЫВНОЙ"
            android:textStyle="bold"
            android:textSize="15dp"/>
    <EditText
            android:id="@+id/callsign_edit_text"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="1dp"
            android:singleLine="true"/>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#0085d5"
            android:gravity="center"
            android:text="ПАРОЛЬ"
            android:textStyle="bold"
            android:textSize="15dp"/>
    <EditText
            android:id="@+id/password_edit_text"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="1dp"
            android:singleLine="true"/>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#0085d5"
            android:gravity="center"
            android:text="ИМЯ"
            android:textStyle="bold"
            android:textSize="15dp"/>
    <EditText
            android:id="@+id/name_edit_text"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="1dp"
            android:singleLine="true"/>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#0085d5"
            android:gravity="center"
            android:text="ФАМИЛИЯ"
            android:textStyle="bold"
            android:textSize="15dp"/>
    <EditText
            android:id="@+id/last_name_edit_text"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="1dp"
            android:singleLine="true"/>

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal" android:gravity="center" android:layout_weight="1">
        <Button
                android:id="@+id/add_driver"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:textSize="20dp"
                android:textStyle="bold" android:text="ДОБАВИТЬ" android:padding="5dp"
                android:layout_gravity="center_vertical"/>
        <Button
                android:id="@+id/beak_to_menu"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:textSize="20dp"
                android:textStyle="bold" android:text="ОТМЕНА" android:padding="5dp"
                />
    </LinearLayout>
</LinearLayout>