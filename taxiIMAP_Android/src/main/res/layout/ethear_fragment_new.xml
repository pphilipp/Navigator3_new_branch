<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="@drawable/dark_back3">

    <ListView android:id="@+id/listview_orders" android:layout_width="fill_parent" android:layout_height="fill_parent"
              android:layout_weight="10" android:layout_gravity="center_horizontal" android:paddingLeft="5dp"
              android:paddingRight="5dp"/>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/img_do_my_order" android:background="@drawable/divider"/>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:layout_gravity="bottom" android:layout_weight="1" android:orientation="horizontal"
                  android:id="@+id/linearLayout" android:background="@drawable/dark_back2"
                  android:gravity="center_vertical|center_horizontal">
        <Button android:id="@+id/refresh" android:layout_width="match_parent" android:layout_height="match_parent"
                android:layout_weight=".5" android:text="Обновить"
                android:background="@drawable/transparent_button"
                android:textColor="@drawable/transparent_button_text"
                android:textSize="@dimen/transparent_button_text_size" android:padding="5dp"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/imageView2" android:background="@drawable/separator3" android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>
        <Button android:id="@+id/back_to_main_menu" android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight=".5" android:text="Назад"
                android:background="@drawable/transparent_button"
                android:textColor="@drawable/transparent_button_text"
                android:textSize="@dimen/transparent_button_text_size" android:padding="5dp"/>
    </LinearLayout>
</LinearLayout>