<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parking_item_holder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/parking_name_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ParkingName"
        android:layout_weight="1"
        android:textColor="@color/orangeEditText"
        android:textSize="22sp"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/amount_of_drivers_txt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="10"
        android:layout_weight="5"
        android:gravity="center"
        android:layout_margin="2dp"
        android:textColor="#EFEFEF"
        android:background="@drawable/price_in_order_list"/>
</LinearLayout>