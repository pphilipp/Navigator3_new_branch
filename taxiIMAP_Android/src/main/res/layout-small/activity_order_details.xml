<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="0dp"
    tools:context=".OrderDetails" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="24dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txt_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_arrived"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="На месте" />

    <Button
        android:id="@+id/btn_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_back"
        android:layout_alignBottom="@+id/btn_back"
        android:layout_toLeftOf="@+id/btn_back"
        android:enabled="false"
        android:text="Карта" />

    <Button
        android:id="@+id/btn_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_map"
        android:layout_alignBottom="@+id/btn_map"
        android:layout_toLeftOf="@+id/btn_map"
        android:enabled="false"
        android:text="Детали" />

    <Button
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn_do"
        android:layout_alignParentRight="true"
        android:text="Назад" />

    <Button
        android:id="@+id/btn_do"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn_arrived"
        android:layout_toRightOf="@+id/btn_arrived"
        android:text="Выполняю" />

    <Button
        android:id="@+id/btn_cancel_ord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_do"
        android:layout_alignLeft="@+id/btn_do"
        android:layout_alignRight="@+id/btn_do"
        android:text="Отменить" />

    <Button
        android:id="@+id/btn_connectDriverClient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_cancel_ord"
        android:layout_alignBottom="@+id/btn_cancel_ord"
        android:layout_alignRight="@+id/btn_back"
        android:background="@drawable/tel_2" />

    <Button
        android:id="@+id/btn_accept_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_cancel_ord"
        android:layout_alignBottom="@+id/btn_cancel_ord"
        android:layout_alignLeft="@+id/btn_arrived"
        android:layout_toLeftOf="@+id/btn_cancel_ord"
        android:text="Принять" />

</RelativeLayout>